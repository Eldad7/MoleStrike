<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:background="#303030"
    android:orientation="horizontal">

    <EditText
        android:defaultValue="Player1"
        android:inputType="textCapWords"
        android:key="display_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:title="Your Name"
        android:layout_height="38dp"
        android:id="@+id/display_name"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_width="100dp" />

    <Switch
        android:key="soundfx"
        android:title="soundFX"
        android:textOff="Effects OFF"
        android:textOn="Effects ON"
        android:defaultValue="true"
        android:layout_height="65dp"
        android:layout_width="60dp"
        android:id="@+id/music"
        tools:layout_editor_absoluteY="94dp"
        tools:layout_editor_absoluteX="145dp" />
    <SeekBar
        android:defaultValue="100"
        android:title="Volume"
        android:key="MusicVolume"
        android:id="@+id/musicSeekbar"
        android:layout_height="65dp"
        android:layout_width="100dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/music"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/soundFXSeekbar"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintVertical_bias="1.0" />

    <Switch
        android:key="music"
        android:title="Music"
        android:textOff="Music OFF"
        android:textOn="Music ON"
        android:defaultValue="true"
        android:id="@+id/soundfx"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/music"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintVertical_bias="0.32999998"
        android:layout_width="60dp"
        android:layout_height="65dp" />

    <SeekBar
        android:defaultValue="100"
        android:title="Volume"
        android:key="MusicVolume"
        android:id="@+id/soundFXSeekbar"
        android:layout_height="65dp"
        android:layout_width="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/soundfx"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.11"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:layout_width="113dp"
        app:srcCompat="@drawable/music"
        android:id="@+id/imageView"
        app:layout_constraintRight_toLeftOf="@+id/music"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        app:srcCompat="@drawable/soundfx"
        android:id="@+id/imageView2"
        android:layout_height="65dp"
        android:layout_width="113dp"
        android:layout_marginTop="168dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/soundfx"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.89" />


</android.support.constraint.ConstraintLayout>