<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_dialog"
    android:layout_width="450dp"
    android:layout_height="300dp"
    tools:context="corem.eldad.molestrike.LevelDialog">

    <RadioButton
        android:checked="true"
        android:id="@+id/easy"
        android:button="@drawable/empty"
        android:background="@drawable/easy"
        android:onClick="play"
        android:layout_width="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintRight_toLeftOf="@+id/medium" />

    <RadioButton
        android:id="@+id/medium"
        android:background="@drawable/mediumdisabled"
        android:enabled="false"
        android:button="@drawable/empty"
        android:onClick="play"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <RadioButton
        android:id="@+id/hard"
        android:layout_width="100dp"
        android:text="Hard"
        android:button="@drawable/empty"
        android:enabled="false"
        android:background="@drawable/harddisabled"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/medium"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>
