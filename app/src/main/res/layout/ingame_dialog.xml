<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#303030"
    android:orientation="horizontal"
    android:layout_width="225dp"
    android:layout_height="100dp">

    <ImageButton
        android:layout_width="44dp"
        android:layout_height="37dp"
        android:id="@+id/resumeGame"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:drawable/ic_media_play"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintVertical_bias="0.82"
        android:clickable="true"/>

    <Switch
        android:layout_width="79dp"
        android:layout_height="31dp"
        android:id="@+id/musicInGame"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:background="@drawable/music"
        android:button="@drawable/empty"
        app:layout_constraintRight_toLeftOf="@+id/resumeGame"
        android:clickable="true"
        android:track="@drawable/empty"
        android:thumb="@drawable/empty" />

    <Switch
        android:layout_width="84dp"
        android:layout_height="31dp"
        android:id="@+id/soundfxInGame"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:background="@drawable/soundfx"
        android:button="@drawable/empty"
        app:layout_constraintLeft_toRightOf="@+id/resumeGame"
        android:track="@drawable/empty"
        android:thumb="@drawable/empty" />


</android.support.constraint.ConstraintLayout>