<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forestbackground"
    tools:context="corem.eldad.molestrike.GameActivity">

    <ImageView
        app:srcCompat="@drawable/talpa1"
        android:id="@+id/bottomMiddleMole"
        android:layout_width="88dp"
        android:layout_height="86dp"
        app:layout_constraintTop_toBottomOf="@+id/topRightMole"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="bottomMiddle"/>

    <ImageView
        android:layout_height="86dp"
        app:srcCompat="@drawable/talpa1"
        android:id="@+id/topMiddleMole"
        android:layout_width="86dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/topRightMole"
        android:contentDescription="topMiddle"
        android:layout_marginTop="120dp"/>

    <ImageView
        android:layout_width="86dp"
        android:layout_height="86dp"
        app:srcCompat="@drawable/talpa1"
        android:id="@+id/bottomLeftMole"
        app:layout_constraintTop_toBottomOf="@+id/topLeftMole"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bottomMiddleMole"
        android:contentDescription="bottomLeft"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        app:layout_constraintHorizontal_bias="0.33"/>

    <ImageView
        android:layout_width="86dp"
        app:srcCompat="@drawable/talpa1"
        android:id="@+id/topLeftMole"
        android:adjustViewBounds="false"
        android:layout_height="86dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/topRightMole"
        android:contentDescription="topLeft"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="63dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginTop="120dp"
        app:layout_constraintHorizontal_bias="0.18"/>

    <ImageView
        app:srcCompat="@drawable/talpa1"
        android:id="@+id/topRightMole"
        android:layout_height="86dp"
        android:layout_width="87dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="topRight"
        android:layout_marginTop="120dp"/>

    <ImageView
        app:srcCompat="@drawable/talpa1"
        android:id="@+id/bottomRightMole"
        android:layout_height="86dp"
        app:layout_constraintTop_toBottomOf="@+id/topMiddleMole"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bottomMiddleMole"
        android:contentDescription="bottomRight"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="86dp"/>

    <ImageView
        android:id="@+id/countDownView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/bottomMiddleMole"
        app:layout_constraintVertical_bias="0.0"
        android:visibility="visible"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:text="Score: "
        android:layout_width="143dp"
        android:layout_height="42dp"
        android:id="@+id/count"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.13"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:textColor="@android:color/holo_red_dark" />

</android.support.constraint.ConstraintLayout>
