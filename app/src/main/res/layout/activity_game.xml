<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="corem.eldad.molestrike.GameActivity">

    <ImageView
        android:id="@+id/MiddleMole"
        android:layout_width="88dp"
        android:layout_height="86dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="bottomMiddle"
        app:layout_constraintTop_toTopOf="@+id/countDownView"
        app:layout_constraintVertical_bias="0.99"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:layout_height="86dp"
        android:id="@+id/topRightMole"
        android:layout_width="86dp"
        android:contentDescription="topMiddle"
        app:layout_constraintBottom_toTopOf="@+id/bottomRightMole"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintTop_toTopOf="@+id/life"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:layout_height="87dp"
        android:id="@+id/bottomLeftMole"
        android:contentDescription="bottomLeft"
        android:layout_width="86dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:layout_width="86dp"
        android:id="@+id/topLeftMole"
        android:adjustViewBounds="false"
        android:layout_height="86dp"
        android:contentDescription="topLeft"
        app:layout_constraintBottom_toTopOf="@+id/bottomLeftMole"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/topMiddleMole"
        android:layout_height="87dp"
        android:layout_width="87dp"
        android:contentDescription="topRight"
        app:layout_constraintBottom_toTopOf="@+id/MiddleMole"
        app:layout_constraintTop_toTopOf="@+id/countDownView"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/bottomRightMole"
        android:layout_height="86dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="bottomRight"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="2dp"
        android:layout_width="86dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/life"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/countDownView"
        android:visibility="visible"
        android:layout_width="179dp"
        android:layout_height="170dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toRightOf="@+id/life"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="136dp"
        app:layout_constraintHorizontal_bias="0.43"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:text="Score: "
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:id="@+id/count"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:textColor="?android:attr/colorPressedHighlight" />

    <TextView
        android:text="Top:"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:id="@+id/topScore"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.16000003"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:textColor="?android:attr/colorPressedHighlight"
        app:layout_constraintRight_toLeftOf="@+id/pause" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:id="@+id/pause"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/topRightMole"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:onClick="Pause"
        android:background="@drawable/pause"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:layout_width="219dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/ic_heart_full"
        android:id="@+id/life"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/topScore"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructions"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:text="TextView"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rabbitInstructions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.29000002" />

</android.support.constraint.ConstraintLayout>
