<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forestbackground"
    tools:context="corem.eldad.molestrike.GameActivity">

    <ImageView
        app:srcCompat="@drawable/talpa1"
        android:id="@+id/bottomMiddleMole"
        android:layout_width="88dp"
        android:layout_height="86dp"
        app:layout_constraintTop_toBottomOf="@+id/topRightMole"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="bottomMiddle"
        android:visibility="gone"/>

    <ImageView
        android:layout_height="86dp"
        app:srcCompat="@drawable/talpa1"
        android:id="@+id/topMiddleMole"
        android:layout_width="86dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/topRightMole"
        android:contentDescription="topMiddle"
        android:layout_marginTop="120dp"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="86dp"
        android:layout_height="86dp"
        app:srcCompat="@drawable/talpa1"
        android:id="@+id/bottomLeftMole"
        app:layout_constraintTop_toBottomOf="@+id/topLeftMole"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bottomMiddleMole"
        android:contentDescription="bottomLeft"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        app:layout_constraintHorizontal_bias="0.33"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="86dp"
        app:srcCompat="@drawable/talpa1"
        android:id="@+id/topLeftMole"
        android:adjustViewBounds="false"
        android:layout_height="86dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/topRightMole"
        android:contentDescription="topLeft"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="63dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginTop="120dp"
        app:layout_constraintHorizontal_bias="0.18"
        android:visibility="gone"/>

    <ImageView
        app:srcCompat="@drawable/talpa1"
        android:id="@+id/topRightMole"
        android:layout_height="86dp"
        android:layout_width="87dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="topRight"
        android:layout_marginTop="120dp"
        android:visibility="gone"/>

    <ImageView
        app:srcCompat="@drawable/talpa1"
        android:id="@+id/bottomRightMole"
        android:layout_height="86dp"
        app:layout_constraintTop_toBottomOf="@+id/topMiddleMole"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bottomMiddleMole"
        android:contentDescription="bottomRight"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="86dp"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>
