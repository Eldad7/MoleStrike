<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_game_medium"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="corem.eldad.molestrike.GameActivity">

    <ImageView
        android:id="@+id/MiddleMole"
        android:contentDescription="bottomMiddle"
        android:layout_height="86dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomMiddleMole"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        android:layout_width="86dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />

    <ImageView
        android:id="@+id/rightMiddleMole"
        android:contentDescription="bottomMiddle"
        android:layout_width="86dp"
        android:layout_height="86dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomRightMole"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/life"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.92" />

    <ImageView
        android:id="@+id/bottomMiddleMole"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="bottomMiddle"
        android:layout_width="86dp"
        android:layout_height="86dp"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintTop_toTopOf="@+id/countDownView"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/topRightMole"
        android:contentDescription="topMiddle"
        android:layout_width="86dp"
        android:layout_height="86dp"
        app:layout_constraintTop_toTopOf="@+id/life"
        app:layout_constraintBottom_toTopOf="@+id/topMiddleMole"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintRight_toLeftOf="@+id/rightMiddleMole"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/bottomLeftMole"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/MiddleMole"
        android:contentDescription="bottomLeft"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="44dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="44dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/count"
        android:layout_width="86dp"
        android:layout_height="86dp" />

    <ImageView
        android:id="@+id/topLeftMole"
        android:adjustViewBounds="false"
        android:contentDescription="topLeft"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomLeftMole"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/topMiddleMole"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="topRight"
        android:layout_marginTop="248dp"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintRight_toLeftOf="@+id/bottomRightMole"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="86dp"
        android:layout_height="86dp"
        app:layout_constraintVertical_bias="0.99" />

    <ImageView
        android:id="@+id/bottomRightMole"
        android:contentDescription="bottomRight"
        android:layout_width="86dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintTop_toTopOf="@+id/life"
        android:layout_height="86dp" />

    <ImageView
        android:id="@+id/countDownView"
        android:visibility="visible"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="Score: "
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:id="@+id/count"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:textColor="?android:attr/colorPressedHighlight" />

    <TextView
        android:text="Top:"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:id="@+id/topScore"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.16000003"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:textColor="?android:attr/colorPressedHighlight"
        app:layout_constraintRight_toLeftOf="@+id/pause" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:id="@+id/pause"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/topRightMole"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:onClick="Pause"
        android:background="@drawable/pause"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:layout_width="219dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/ic_heart_full"
        android:id="@+id/life"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>
