<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="Anonymous"
        android:inputType="textCapWords"
        android:key="display_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Your Name"/>

    <ListPreference
        android:defaultValue="Fade"
        android:title="@string/transitions"
        android:entries="@array/transition_array_titles"
        android:entryValues="@array/transition_array_values"
        android:key="list_preference" />


</PreferenceScreen>